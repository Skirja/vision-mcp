{
    "name": "vision-mcp-server",
    "version": "1.0.0",
    "description": "MCP server for visual understanding using OpenAI GPT-4V and compatible APIs",
    "private": false,
    "type": "module",
    "main": "dist/server/index.js",
    "bin": {
        "vision-mcp": "./bin/vision-mcp"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server/index.js",
        "dev": "ts-node --transpile-only src/server/index.ts",
        "check": "tsc -p tsconfig.json --noEmit"
    },
    "keywords": [
        "mcp",
        "vision",
        "openai",
        "gpt-4v",
        "visual-understanding",
        "image-analysis",
        "ui-extraction"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.18.1",
        "openai": "^4.57.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.14.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}